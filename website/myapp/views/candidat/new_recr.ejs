        </div>

        <script>
            function openOffre(button) {
                var offreDiv = button.closest('#off');
                var entrepriseDiv = offreDiv.querySelector('.entreprise');
                var numeroElement = entrepriseDiv.querySelector('p');
                var siren = numeroElement.textContent;
                console.log(`/candidat/rejoindre_orga/${siren}`);
                window.location.href = `/candidat/rejoindre_orga/${siren}`
            }
        </script>
