    <body>
        <div id="page">
            <div id="top_bar">
                <div id="home_button">
                    <a href="/candidat/candidat_main"><button id="menu">Menu</button></a>
                </div>
                <div class="new_org">
                    <a href="/candidat/create_orga"><button>Ajouter une nouvelle organisation</button></a>
                </div> 
                <div id="account">
                    <a href="/candidat/mes_candidatures"><button id="cand">Mes candidatures</button></a>
                    <a href="/candidat/candidat_account"><button id="account">Mon compte</button></a>
                </div>
            </div>
    
            <div id="container">
                <div id="offers">
                    <div id="label">
                        <label for="candidat">Devenir Recruteur</label>
                    </div>
                    <% offres.forEach((offre)=> { %>
                        <div id="off">
                            <div id="off_img">
                                <img src="../LOGO-META.webp" alt="Logo de l'entreprise">
                            </div>
                            <div class="entreprise">
                                <h1><%= offre.nom%></h1>
                                <p><%= offre.siren%></p>
                            </div>
                            <div class="desc">
                                <p><%= offre.type + ' - ' + offre.statut%></p>
                                <p><%= offre.description%></p>
                            </div>
                            
                            <div class="offer_button">
                                <button onclick="openOffre(this)">Demander à rejoindre</button>
                            </div>
                        </div>
                    <% }) %>
                    
                    <div class="pagination">
                        <a href="#" class="prev">&laquo; Previous</a>
                        <a href="#" class="active">1</a>
                        <a href="#">2</a>
                        <a href="#">3</a>
                        <a href="#">4</a>
                        <a href="#">5</a>
                        <a href="#" class="next">Next &raquo;</a>
                    </div>

                </div>
