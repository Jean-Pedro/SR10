<html>
    <head>
        <meta charset="utf-8">
        <title>Candidat</title>
        <link rel="stylesheet" href="/stylesheets/main.css">
    </head>
    <body>
        <div id="page">
            <div id="top_bar">
                <div id="home_button">
                    <a href="/auth/login"><button id="menu">Menu</button></a>
                </div>
                <div id="account">
                    <a href="/candidat/mes_candidatures"><button id="cand">Mes candidatures</button></a>
                    <a href="/candidat/candidat_account"><button id="account">Mon compte</button></a>
                </div>
            </div>
    
            <div>
                <div>
                    <form action="/candidat/verif_siren" method="post">
                        <div id="label">
                            <label for="candidat">Devenir Recruteur</label>
                        </div>
                        <div id="div_center">
                            <div id="label_form">
                                <label for="siren">Numero de siren</label> <br>
                            </div>
                            <div id="input_form">
                                <input type="number" id="siren" name="siren" required>
                            </div>
                            <div class="error">
                                <p><%= error_siren %></p>
                            </div>
                            <button id="submit" type="submit">Valider</button>
                        </div>
                    </form>
                    <br>
                    <div class="new_org">
                        <a href="/candidat/create_orga"><button>Ajouter une nouvelle organisation</button></a>
                    </div> 
                </div>
            </div>
        </div>
    </body>
</html>