<html>
    <head>
        <meta charset="utf-8">
        <title>Vidualisation des comptes</title>
        <link rel="stylesheet" href="/stylesheets/main.css">
    </head>
    <body>
        <div id="page">
            <div id="top_bar">
                <div id="home_button">
                    <a href="/auth/login"><button id="menu">Menu</button></a>
                </div>
                <div id="account">
                    <a href="/users/mon_compte"><button id="account">Mon compte</button></a>
                </div>
            </div>
    
            <div id="container">
                <div id="offers">
                    <div id="label">
                        <label for="candidat">Espace Administrateur - Visualisation des Comptes</label>
                    </div>      
                    <% users.forEach((user)=> { %>  
                    <div id="off">
                        <div class="entreprise">                                
                            <h1><%= user.prenom + ' ' + user.nom%></h1>
                            <p><%= user.role %></p>
                        </div>
                        <div class="desc">
                            <p><%= user.email%></p>
                            <p><%= user.num_tel%></p>
                        </div>
                        <div class="offer_button">
                            <button onclick="details(this)" data-id="<%= user.id_utilisateur %>">Plus de d√©tails</button>
                        </div>
                    </div>
                    <% }) %>
                </div>
            </div>
        </div>
        <script>
            function details(button) {
                var id = button.getAttribute('data-id');
                console.log(`Id de l'utilisateur : ${id}`);
                window.location.href = `/admin/user_details/${id}`;
            };
        </script>
    </body>
</html>