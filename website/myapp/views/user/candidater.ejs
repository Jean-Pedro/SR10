<html lang="fr">
    <head>
        <meta charset="utf-8">
        <title>Candidater</title>
        <link rel="stylesheet" href="/stylesheets/connexion.css">
    </head>
    <body>
        <div id="container">
            <div id="titre">
                <h1>Candidater</h1>
                <h2>Offre : <%=offre%></h2>
            </div>
            <div id="case">
                <div id="column_g">
                    <div id="formulaire">
                        <form action="/users/valide_cand" method="post" enctype="multipart/form-data">
                            <input type="hidden" id="offre" name="offre" value="<%= offre %>">
                            <% pieces.forEach((piece)=> { %>
                                <div id="label_form">
                                    <label for="piece"><%= piece%></label> <br>
                                </div>
                                <div id="input_form">
                                    <input type="file" id="piece" name="piece" placeholder="<%= piece.fichier%>" required>
                                    <input type="hidden" id="type" name="type" value="<%= piece %>">
                                </div>
                                <% }) %>
                            <button id="submit" type="submit">Candidater</button>
                        </form>
                    </div>
                </div>
                <div id="column_d">
                    <img src="/pictures/connexion.png" alt="Image d'illustration">
                </div>
            </div>
        </div>

        
    
    
    </body>
</html>