<html lang="fr">
    <head>
        <meta charset="utf-8">
        <title>Modifier Candidature</title>
        <link rel="stylesheet" href="/stylesheets/connexion.css">
    </head>
    <body>
        <div id="container_2">
            <div id="titre">
                <h1>Modifier Candidature</h1>
            </div>
            
            <div id="case">
                <div id="column_g">
                    <div id="formulaire">
                        <form action="/recruteur/confirm_modif_cand" method="post" enctype="multipart/form-data">
                            <input type="hidden" id="offre" name="offre" value="<%=offre%>">
                            <% pieces.forEach((piece)=> { %>
                            <div id="label_form">
                                <label for="piece"><%= piece.type%></label> <br>
                            </div>
                            <div id="input_form">
                                <a href="/uploads/<%= piece.fichier%>" download>Télécharger <%= piece.type%></a> <br>
                                <input type="file" id="piece" name="piece" placeholder="<%= piece.fichier%>" required>
                                <input type="hidden" id="type" name="type" value="<%= piece.type %>">
                                <input type="hidden" name="candidature" id="candidature" value="<%=piece.candidature%>">
                                <input type="hidden" name="id_piece" id="id_piece" value="<%=piece.id_piece%>">
                            </div>
                            <% }) %>
                            <button id="submit" type="submit">Modifier</button>
                        </form>
                    </div>
                </div>  
            </div>
        </div>
    </body>
</html>