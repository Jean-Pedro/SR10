<html>
    <head>
        <meta charset="utf-8">
        <title>Recruteur Offre</title>
        <link rel="stylesheet" href="/stylesheets/main.css">
    </head>
    <body>
        <div id="page">
            <div id="top_bar">
                <div id="home_button">
                    <a href="/auth/login"><button id="menu">Menu</button></a>
                </div>
                <div id="account">
                    <a href="/users/mon_compte"><button id="account">Mon compte</button></a>
                </div>
            </div>
            <div class="container_val">
                <div class="desc_offre">
                    <div class="entreprise">
                        <h1><%= user.nom %> <%= user.prenom%></h1>
                        <p>ID offre : <%=offre%> -- ID candidature : <%= candidature.id_c %></p>
                    </div>
                    <div class="description">
                        <p>Numéro de téléphone : <%= user.num_tel%></p>
                        <p>Email : <%= user.email%></p>
                        <p>Date de candidature : <%= candidature.date_candidature %></p>
                        <% pieces.forEach((piece)=> { %> 
                            <p><%= piece.type%> : <a href="/uploads/<%= piece.fichier%>" download>Télécharger <%= piece.fichier%></a></p>
                        <% }) %>
                    </div>
                    <div class="offer_button">
                        <a href="/recruteur/validation_candidature/<%=offre%>/<%= candidature.id_c %>"><button>Accepter</button></a>
                        <a href="/recruteur/refus_candidature/<%=offre%>/<%= candidature.id_c %>"><button>Refuser</button></a>
                    </div>
                </div>
            </div>
        </div>
    </body>
</html>