<html>
    <head>
        <meta charset="utf-8">
        <title>Creation offre d'emploi</title>
        <link rel="stylesheet" href="/stylesheets/connexion.css">
    </head>
    <body>
        <div id="container">
            <div id="titre">
                <h1>Création Offre d'Emploi</h1>
            </div>
            <form action="/recruteur/confirm_offre" method="post">
                <div id="case">
                    <div id="column_g">
                        <div id="formulaire">
                            <div id="label_form">
                                <label for="fiche">Fiche de poste</label> <br>
                            </div>
                            <div id="input_form">
                                    <select id="fiche" name="fiche">
                                        <% fiches.forEach(function(fiche) { %>
                                            <option value="<%= fiche.id_fiche %>"><%= fiche.intitule %> - <%= fiche.resp_hierarchique%></option>
                                        <% }); %>
                                    </select>
                            </div>
                            <div id="label_form">
                                <label for="indications">Indications</label> <br>
                            </div>
                            <div id="input_form">
                                <input type="text" id="indications" name="indications" placeholder="CV, lettre de motivation, ..." required>
                            </div>
                            <div id="label_form">
                                <label for="date">Date de validité</label> <br>
                            </div>
                            <div id="input_form">
                                <input type="date" id="date" name="date" required>
                            </div>
                            <button id="submit" type="submit">Valider</button>
                        </div>
                    </div>
                </div>
            </form>
        </div>
    </body>
</html>